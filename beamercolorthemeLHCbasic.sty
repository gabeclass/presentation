\setbeamercolor*{institute}{fg=LHCtitlenotes}

\setbeamercolor*{frametitle}{fg=LHCheaders}
\setbeamercolor{block body}{bg=LHCbackground!10!white}
\setbeamercolor{block title}{bg=LHCbackground, fg=LHCtitlebox}

\setbeamercolor{itemize item}{fg=LHCitems}
\setbeamertemplate{itemize item}[circle]

\setbeamercolor{section in head/foot}{fg=LHClgreen}
\setbeamercolor{mini frame}{fg=LHCfooters}
\setbeamercolor{framefooter}{fg=LHCfooters}

