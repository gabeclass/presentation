% Footers
\definecolor{LHCfooters}{RGB}{0, 51, 102}

% Items
\definecolor{LHCitems}{RGB}{0, 0, 153}

% Headers
\definecolor{LHCheaders}{RGB}{0, 102, 204}

% Title box backgrounds
\definecolor{LHCbackground}{RGB}{102, 102, 255}

% Title box header
\definecolor{LHCtitlebox}{RGB}{255,255,255}

% First page fill (only one that is used by name in another file)
\definecolor{LHCmainbackground}{RGB}{102, 102, 255}

% First page titles
\definecolor{LHCtitles}{RGB}{255, 255, 255}

% Notes on the first page (institute)
\definecolor{LHCtitlenotes}{RGB}{255, 50, 50}

\setbeamerfont*{title page header}{size=\LARGE}
\setbeamercolor*{title page header}{fg=LHCtitles}
